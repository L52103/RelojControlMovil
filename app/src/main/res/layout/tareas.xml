<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TareasActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tareas Pendientes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Lista de tareas -->
    <LinearLayout
        android:id="@+id/tareasContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textViewTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tarea1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Comprar materiales"
            android:padding="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tarea2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Llamar al proveedor"
            android:padding="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tarea3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Enviar reporte mensual"
            android:padding="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tarea4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Revisar correos"
            android:padding="8dp"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
